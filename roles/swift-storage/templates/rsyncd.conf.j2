uid = swift
gid = swift
log file = /var/log/rsyncd.log
pid file = /var/run/rsyncd.pid
address = {{ hostvars[ansible_hostname]['ansible_' + iface].ipv4.address }}

[account]
max connections = 2
path = /srv/1/node/sdb1/
read only = false
lock file = /var/lock/account.lock

[container]
max connections = 2
path = /srv/1/node/sdb1/
read only = false
lock file = /var/lock/container.lock

[object]
max connections = 2
path = /srv/1/node/sdb1/
read only = false
lock file = /var/lock/object.lock
